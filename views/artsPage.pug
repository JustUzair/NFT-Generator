extends base
block content
    if artCount <= 0
        h1(style='color:#fff; text-align:center; font-size:3rem; text-decoration:underline; font-style:italic; font-weight:200; margin-bottom:58vh;') No arts generated by this user
    else
        .arts--container
            each art in arts
                .nft
                    .main
                        img.tokenImage(src=`/img/arts/${art.artist}/out/${art.photo}` alt=`${art.artist}/${art.photo}`)
                        h2(style='text-transform:capitalize;text-align:center')=art.name
                        p.description(style='text-align:center')=art.description
                        .tokenInfo
                            .price
                                img(src='/img/eth.svg' width=25)
                                p #{art.price} ETH
                            .duration
                                img(src='/img/buy.svg' width=25 style="margin-right:1px")
                                span.card__btn.card__btn--primary Buy Now
                        hr
                        .creator
                            .wrapper
                                img(src=`/img/users/${artist.photo}` alt='Creator')
                            p
                                ins Creation of       
                                span=artist.name

