header.header
    nav.nav.nav--tours
        a.nav__el(href='/') All Tours
    div.header__logo
        img(src='/img/logo.svg' alt='Mintrrs logo')

    nav.nav.nav--user 
        if !user
            a.nav__el(href=`/login`) Log In
            a.nav__el.nav__el--cta(href=`/signup`) Sign Up
        else 
            a.nav__el.nav__user--photo(href='/me')
                img.nav__user-img(src=user.photo crossorigin='anonymous' alt=`${user.name.split(' ')[0]}`)
                span= user.name.split(' ')[0]
            a.nav__el.nav__el--logout Log out